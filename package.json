{
  "name": "asligibi-website",
  "version": "1.0.0",
  "description": "Modern, professional website for AslÄ± Gibi - TOZSolutions",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --host=localhost --open=/",
    "start": "npm run dev",
    "build": "npm run clean && npm run copy-assets && npm run minify-css && npm run minify-js",
    "clean": "rimraf dist",
    "copy-assets": "copyfiles -u 1 'assets/**/*' 'dist/' && copyfiles '*.html' 'dist/' && copyfiles -u 1 'styles/**/*' 'dist/styles/' && copyfiles -u 1 'scripts/**/*' 'dist/scripts/'",
    "minify-css": "cleancss -o dist/styles/main.min.css styles/main.css",
    "minify-js": "terser scripts/main.js -o dist/scripts/main.min.js --compress --mangle",
    "test": "echo \"Tests will be implemented\" && exit 0"
  },
  "keywords": [
    "website",
    "modern",
    "responsive",
    "bootstrap",
    "javascript",
    "html5",
    "css3",
    "tozsolutions"
  ],
  "author": "TOZSolutions",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tozsolutions/asligibi_website-_2.git"
  },
  "bugs": {
    "url": "https://github.com/tozsolutions/asligibi_website-_2/issues"
  },
  "homepage": "https://github.com/tozsolutions/asligibi_website-_2#readme",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "copyfiles": "^2.4.1",
    "live-server": "^1.2.2",
    "rimraf": "^5.0.5",
    "terser": "^5.20.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
