{
  "name": "asligibi-website",
  "version": "1.0.0",
  "description": "Modern, professional website for AslÄ± Gibi - TOZSolutions",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --host=localhost --open=/",
    "start": "npm run dev",
    "build": "npm run clean && npm run copy-assets && npm run optimize-images && npm run minify-css && npm run minify-js",
    "clean": "rimraf dist",
    "copy-assets": "copyfiles -u 1 'assets/**/*' 'dist/' && copyfiles '*.html' 'dist/'",
    "optimize-images": "imagemin 'assets/images/*' --out-dir='dist/assets/images' --plugin=imagemin-mozjpeg --plugin=imagemin-pngquant",
    "minify-css": "cleancss -o dist/styles/main.min.css styles/main.css",
    "minify-js": "terser scripts/main.js -o dist/scripts/main.min.js --compress --mangle",
    "lint": "eslint scripts/ --ext .js",
    "lint:fix": "eslint scripts/ --ext .js --fix",
    "format": "prettier --write '**/*.{html,css,js,json,md}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lighthouse": "lighthouse http://localhost:3000 --output json --output html --output-path ./reports/lighthouse",
    "validate-html": "html-validate *.html",
    "validate-css": "stylelint 'styles/**/*.css'",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir=dist",
    "deploy:github": "gh-pages -d dist",
    "serve:prod": "http-server dist -p 8080 -c-1",
    "analyze": "bundlesize",
    "security-check": "nsp check",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "website",
    "modern",
    "responsive",
    "bootstrap",
    "javascript",
    "html5",
    "css3",
    "tozsolutions"
  ],
  "author": {
    "name": "TOZSolutions",
    "email": "info@tozsolutions.com",
    "url": "https://tozsolutions.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tozsolutions/asligibi_website-_2.git"
  },
  "bugs": {
    "url": "https://github.com/tozsolutions/asligibi_website-_2/issues"
  },
  "homepage": "https://asligibi.com",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "clean-css-cli": "^5.6.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "gh-pages": "^6.0.0",
    "html-validate": "^8.5.0",
    "http-server": "^14.1.1",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "jest": "^29.7.0",
    "lighthouse": "^11.2.0",
    "lint-staged": "^14.0.1",
    "live-server": "^1.2.2",
    "netlify-cli": "^16.8.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "terser": "^5.20.0",
    "vercel": "^32.4.1"
  },
  "dependencies": {
    "bootstrap": "^5.3.2"
  },
  "bundlesize": [
    {
      "path": "dist/styles/main.min.css",
      "maxSize": "50 kB"
    },
    {
      "path": "dist/scripts/main.min.js",
      "maxSize": "100 kB"
    }
  ],
  "lint-staged": {
    "*.{html,css,js,json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ],
    "*.html": [
      "html-validate"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "scripts/**/*.js",
      "!scripts/vendor/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}